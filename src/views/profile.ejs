<%- include('partials/header') %>
    <div class="container py-4">
        <div class="row">
            <%- include('partials/side_info') %>
            <div class="col-lg-8" id="userProfile">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Full Name</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0" id="fullname">
                                    <%= user.fullname || 'Please update your profile to provide your fullname' %>
                                </p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Email</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">
                                    <%= user.email%>
                                </p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Phone</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0" id="phone">
                                    <%= user.phone || 'Please update your profile to provide your phone number' %>
                                </p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Address</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0" id="address">
                                    <%= user.address || 'Please update your profile to provide your address' %>
                                </p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Joined day</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0" id="joined_day">
                                    <%= user.createdAt %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <%- include('partials/footer') %>

<script>
    function formatDate(dateStr) {
            const date = new Date(dateStr);
            const day = String(date.getDate()).padStart(2, '0'); // Pad single digit days with leading zero
            const month = String(date.getMonth() + 1).padStart(2, '0'); // Pad single digit months with leading zero, getMonth() returns 0-11
            const year = date.getFullYear();
            return `${day}/${month}/${year}`;
        }
        const joinedDay = document.getElementById('joined_day');
        joinedDay.textContent = formatDate(joinedDay.textContent);
 </script>